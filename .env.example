# Application
NODE_ENV=development
PORT=3000
APP_NAME=ChatCepat-WA-Gateway

# Laravel Integration
LARAVEL_API_URL=http://localhost:8000
LARAVEL_APP_URL=http://localhost:8000
LARAVEL_SYSTEM_TOKEN=

# Database (MySQL - shared with Laravel)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=chatcepat
DB_USER=root
DB_PASSWORD=root

# Redis (for BullMQ queue and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Keys
OPENAI_API_KEY=

RAJAONGKIR_API_KEY_SHIPPING=
RAJAONGKIR_API_KEY_DELIVERY=

# WhatsApp Configuration
WA_SESSION_STORAGE_PATH=./storage/sessions
WA_MEDIA_STORAGE_PATH=./storage/media

# Rate Limiting (Anti-Block Configuration)
RATE_LIMIT_MESSAGES_PER_MINUTE=10
RATE_LIMIT_MESSAGES_PER_HOUR=100
RATE_LIMIT_MESSAGES_PER_DAY=1000
RATE_LIMIT_MIN_DELAY_MS=2000
RATE_LIMIT_MAX_DELAY_MS=5000
RATE_LIMIT_COOLDOWN_AFTER_MESSAGES=50
RATE_LIMIT_COOLDOWN_DURATION_MS=300000

# Broadcast Configuration
BROADCAST_BATCH_SIZE=20
BROADCAST_BATCH_DELAY_MS=60000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./storage/logs/app.log

# CORS
CORS_ORIGINS=http://localhost:8000,http://localhost:5173

# Security
API_SECRET_KEY=
ENCRYPTION_KEY=
